<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.main.careerbro.modules.salary.dao.EvaSystemDao">

    <sql id="evaSystemColumns">
        a.id as id,
        a.user_id as userId,
        a.salary_id as salaryId,
        a.agree as agree,
        a.opp as opp,
        a.gra as gra,
        a.reserve as reserve,
        a.reserve_time as reserveTime
    </sql>

    <sql id="evaSystemJoins">
    </sql>

    <select id="getEvaSystem" resultType="com.main.careerbro.modules.salary.entity.EvaSystem">
        SELECT <include refid="evaSystemColumns"/>
        FROM eva_system a
        WHERE a.salary_id = #{salaryId}
        AND a.user_id = #{userId}
    </select>


    <insert id="saveEvaSystem">
        INSERT INTO eva_system (
        id,
        user_id,
        salary_id,
        <if test="null != agree">
        agree,
        </if>
        <if test="null != opp">
        opp,
        </if>
        <if test="null != gra">
        gra,
        </if>
        <if test="null != reserve">
        reserve,
        </if>
        <if test="reserve==1">
        reserve_time,
        </if>
        create_time,
        update_time
        )VALUES (
        #{id},
        #{userId},
        #{salaryId},
        <if test="null != agree">
        #{agree},
        </if>
        <if test="null != opp">
        #{opp},
        </if>
        <if test="null != gra">
        #{gra},
        </if>
        <if test="null != reserve">
        #{reserve},
        </if>
        <if test="reserve==1">
        NOW(),
        </if>
        NOW(),
        NOW()
        )
    </insert>

    <update id="updateEvaSystem">
        UPDATE eva_system
        <if test="null != agree">
        SET agree = #{agree},
        </if>
        <if test="null != opp">
        SET opp = #{opp},
        </if>
        <if test="null != gra">
        SET gra = #{gra},
        </if>
        <if test="null != reserve">
        SET reserve = #{reserve},
        </if>
        <if test="null==reserveTime and reserve==1">
            SET reserve_time = NOW(),
        </if>
        SET update_time = NOW()
    </update>


</mapper>